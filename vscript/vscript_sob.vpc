$Configuration
{
	$Compiler
	{
		$PreprocessorDefinitions		"$BASE;VSCRIPT_DLL_EXPORT;MSVC"
	}

	$Linker
	{
		$AdditionalLibraryDirectories	".\languages\python\python-2.5.1\win32release"
	}
}

$Configuration "Release"
{
